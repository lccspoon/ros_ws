<launch>
 
  
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  
  <include
    file="$(find gazebo_ros)/launch/empty_world.launch" >
    <!-- <arg name="world_name"   value="$(find new)/world/ground7.world"/> -->
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
  </include>
  
  <param name="robot_description" command="$(find xacro)/xacro '$(find new)/xacro/new.xacro'"/>
     
  <node pkg="elevation_mapping_demos"    type="odom_six.py"   name="s6_odom_publisher">
  </node> 

  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
             respawn="false" output="screen"
             args="-urdf -model new -param robot_description " />
  

  <rosparam file="$(find new)/config/Touquecotroller.yaml" command="load" ns="/new" />
  
  <node name="control_spawner" pkg="controller_manager" type="spawner"
             respawn="false" output="screen"  ns="/new"
             args="joint_state_controller
                  L1_1_jointcc L1_2_jointcc L1_3_jointcc 
                  L2_1_jointcc L2_2_jointcc L2_3_jointcc 
                  L3_1_jointcc L3_2_jointcc L3_3_jointcc 
                  R1_1_jointcc R1_2_jointcc R1_3_jointcc 
                  R2_1_jointcc R2_2_jointcc R2_3_jointcc 
                  R3_1_jointcc R3_2_jointcc R3_3_jointcc  
                   "/>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
             respawn="false" output="screen"  >
    <remap from="/joint_states" to="/new/joint_states"/>
  </node>

  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />

    <!-- elevation mapping -->
    <include file="$(find new)/foothold_launch/simple_demo.launch" />

    <!-- traversability estimation -->
    <!-- <include file="$(find new)/launch2/traversability_estimation.launch" /> -->
    
    <!-- RVIZ -->
    <!-- <node name="default_rviz" pkg="rviz" type="rviz" /> -->
    <!-- <node name="default_rviz" pkg="rviz" type="rviz" /> -->

</launch>
